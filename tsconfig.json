{  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "none",
    "outDir": "./dist",
    "rootDir": "./typescript",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "removeComments": false,
    "sourceMap": false,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "types": ["xrm"]
  },
  "include": [
    "typescript/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src"
  ]
}
